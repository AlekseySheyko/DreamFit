<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingTop="30dp"
              android:background="#eee"
              tools:context="ui.activities.AerobicActivity">

    <LinearLayout
        android:id="@+id/ab"
        style="@style/ListItem">

        <ImageView
            android:src="@drawable/ic_category_ab"
            style="@style/ImageListView"/>

        <TextView
            android:text="Ab workout"
            style="@style/TextListView"/>
    </LinearLayout>

    <FrameLayout
        style="@style/DividerListItem"/>

    <LinearLayout
        android:id="@+id/leg"
        style="@style/ListItem">

        <ImageView
            android:src="@drawable/ic_category_leg"
            style="@style/ImageListView"/>

        <TextView
            android:text="Leg workout"
            style="@style/TextListView"/>
    </LinearLayout>

    <FrameLayout
        style="@style/DividerListItem"/>

    <LinearLayout
        android:id="@+id/arm"
        style="@style/ListItem">

        <ImageView
            android:src="@drawable/ic_category_arm"
            style="@style/ImageListView"/>

        <TextView
            android:text="Arm workout"
            style="@style/TextListView"
            android:textSize="18sp"/>
    </LinearLayout>

    <FrameLayout
        style="@style/DividerListItem"/>

    <LinearLayout
        android:id="@+id/glutes"
        style="@style/ListItem">

        <ImageView
            android:src="@drawable/ic_category_glutes"
            style="@style/ImageListView"/>

        <TextView
            android:text="Glutes workout"
            style="@style/TextListView"
            android:textSize="18sp"/>
    </LinearLayout>

    <FrameLayout
        style="@style/DividerListItem"/>
</LinearLayout>
