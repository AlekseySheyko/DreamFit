<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context="sheyko.aleksey.mapthetrip.ui.activities.GoalsActivity"
              style="@style/GoalsActivityContainer">

    <!-- Duration -->
    <LinearLayout
        android:id="@+id/stepsContainer"
        android:onClick="addGoal"
        style="@style/GoalContainer">

        <LinearLayout
            style="@style/GoalContainerLayout">

            <TextView
                android:text="@string/steps_label"
                style="@style/GoalContainerHeader"/>

            <ProgressBar
                android:id="@+id/pbSteps"
                android:progressDrawable="@drawable/pb_steps"
                style="@style/GoalProgressBar"/>

            <TextView
                android:id="@+id/stepsNotSetLabel"
                style="@style/GoalNotSetLabel"/>

        </LinearLayout>

        <Button
            android:id="@+id/stepsButton"
            android:background="@drawable/button_steps"
            style="@style/GoalButton"/>

    </LinearLayout>

    <!-- Steps -->
    <LinearLayout
        android:id="@+id/durationContainer"
        android:onClick="addGoal"
        style="@style/GoalContainer">

        <LinearLayout
            style="@style/GoalContainerLayout">

            <TextView
                android:text="@string/run_duration_label"
                style="@style/GoalContainerHeader"/>

            <ProgressBar
                android:id="@+id/pbDuration"
                style="@style/GoalProgressBar"
                android:progressDrawable="@drawable/pb_duration"/>

            <TextView
                android:id="@+id/durationNotSetLabel"
                style="@style/GoalNotSetLabel"/>

        </LinearLayout>

        <Button
            android:id="@+id/durationButton"
            android:background="@drawable/button_duration"
            style="@style/GoalButton"/>

    </LinearLayout>

    <!-- Calories -->
    <LinearLayout
        android:id="@+id/caloriesContainer"
        android:onClick="addGoal"
        style="@style/GoalContainer">

        <LinearLayout
            style="@style/GoalContainerLayout">

            <TextView
                android:text="@string/calories_label"
                style="@style/GoalContainerHeader"/>

            <ProgressBar
                android:id="@+id/pbCalories"
                style="@style/GoalProgressBar"
                android:progressDrawable="@drawable/pb_calories"/>

            <TextView
                android:id="@+id/caloriesNotSetLabel"
                style="@style/GoalNotSetLabel"/>

        </LinearLayout>

        <Button
            android:id="@+id/caloriesButton"
            android:background="@drawable/button_calories"
            style="@style/GoalButton"/>

    </LinearLayout>

</LinearLayout><!-- From: file:/D:/DreamTeen-Fitness/app/src/main/res/layout/activity_goals.xml -->