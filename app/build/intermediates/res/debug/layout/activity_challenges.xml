<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="sheyko.aleksey.mapthetrip.ui.activities.StatsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:background="#fefefe"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#929297"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:layout_marginLeft="8dp"
            android:textColor="#929297"
            android:textSize="16sp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7dbde"/>

    <ListView
        android:id="@+id/stats_list"
        style="@style/TripList"/>

</LinearLayout><!-- From: file:/D:/DreamTeen-Fitness/app/src/main/res/layout/activity_challenges.xml -->