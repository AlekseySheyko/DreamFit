<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="ui.fragments.BodyParamsInput">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/title_basic_information"
        android:textColor="#34495e"
        android:textSize="22sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/target_container"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/ageField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="numberSigned"
            android:imeOptions="actionNext"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/age_field_hint"
            android:ems="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/heightField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:hint="@string/height_field_hint"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textSize="20sp"
                android:maxEms="3"/>

            <Spinner
                android:id="@+id/heightSpinner"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/weightField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:hint="@string/weight_field_hint"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textSize="20sp"
                android:maxEms="3"/>

            <Spinner
                android:id="@+id/weightSpinner"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_male"
                android:checked="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="@string/checkbox_male"
                android:textColor="#34495e"/>

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="@string/checkbox_female"
                android:textColor="#34495e"/>

        </RadioGroup>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button"
        android:onClick="saveData"
        android:paddingBottom="8dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="8dp"
        android:text="@string/save_button_label"
        android:textColor="#5085a9"
        android:textSize="21sp"/>

</LinearLayout>
