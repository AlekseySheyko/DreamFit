<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- Set goal container-->
    <LinearLayout
        android:id="@+id/stepsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/target_container"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Add goal"
            android:fontFamily="sans-serif-light"
            android:textColor="#4a4a4a"
            android:textSize="18sp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/setStepsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:paddingLeft="12dp"
                android:background="@drawable/set_goal_button"
                android:fontFamily="sans-serif-bold"
                android:paddingRight="12dp"
                android:onClick="addFitnessGoal"
                android:text="Add"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/D:/DreamTeen-Fitness/app/src/main/res/layout/fragment_challenge.xml -->